<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme: matrix black background + green text -->
    <style name="Theme.TornadoAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 palette bindings -->
        <item name="colorPrimary">@color/matrixGreen</item>
        <item name="colorOnPrimary">@color/matrixBlack</item>

        <item name="colorSecondary">@color/matrixGreen</item>
        <item name="colorOnSecondary">@color/matrixBlack</item>

        <item name="colorSurface">@color/terminalSurface</item>
        <item name="colorOnSurface">@color/terminalOnSurface</item>

        <item name="colorBackground">@color/matrixBlack</item>  <!-- fixes the missing attr -->
        <item name="colorOnBackground">@color/matrixGreen</item>

        <!-- Actual window background -->
        <item name="android:windowBackground">@color/matrixBlack</item>

        <!-- Default text appearances (make text green) -->
        <item name="textAppearanceBodyLarge">@style/TerminalBody</item>
        <item name="textAppearanceBodyMedium">@style/TerminalBody</item>
        <item name="textAppearanceBodySmall">@style/TerminalBody</item>

        <!-- Buttons look “terminal” -->
        <item name="materialButtonStyle">@style/TerminalButton</item>

        <!-- TextInput style (green hint/cursor) -->
        <item name="textInputStyle">@style/TerminalTextInput</item>
    </style>

    <style name="TerminalBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/matrixGreen</item>
    </style>

    <style name="TerminalButton" parent="Widget.Material3.Button.FilledTonalButton">
        <item name="backgroundTint">@color/matrixDarker</item>
        <item name="rippleColor">@color/matrixGreen</item>
        <item name="android:textColor">@color/matrixGreen</item>
    </style>

    <style name="TerminalTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/matrixGreen</item>
        <item name="hintTextColor">@color/matrixGreen</item>
        <item name="android:textColorHint">@color/matrixGreen</item>
        <item name="android:textColor">@color/matrixGreen</item>
    </style>

</resources>