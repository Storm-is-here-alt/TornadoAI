<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matrixBlack"
    android:padding="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideInset"
        android:paddingBottom="8dp"
        android:divider="@null"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TerminalTextInput"
        android:hint="Type messageâ€¦">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/matrixGreen"
            android:textColorHint="@color/matrixGreen"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tweet"
            style="@style/TerminalButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            style="@style/TerminalButton"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>